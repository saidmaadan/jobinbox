<div class='container'>
<div class='row'>
<div class='row'>

<% if @candidates.any? %>
<% @candidates.in_groups_of(4) do |group| %>
<div class='row'>
<% group.each do |candidate| %>
<% if candidate %>
<div class='col-md-3'>
<div class='row'>
<div class='col-md-4'>
     <p><%#= profile_image_for(candidate) %></p></div>
  <div class='col-md-8'>
      <h4><%= link_to candidate.name, candidate %></h4>
      <h5><%= candidate.email_address %></h5>
      <h5><%= candidate.city %></h5>
      </div>
</div><br>
</div>
<% end %>
<% end %>
</div>
<% end %>
<% end %>


</div>
</div>