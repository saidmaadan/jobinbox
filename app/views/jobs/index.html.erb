<div class="container">
<div class='row'>

<div class='col-md-9 job_home'>
<div class='row job_top'>
<div class='col-md-2'></div>
<div class='col-md-6'>Job Title and Description</div>
<div class='col-md-2'>Location</div>
<div class='col-md-2'>Posted</div></div>

 <% @jobs.each do |job| %>
<div class='row job_level'>

<div class='col-md-2'><%= image_tag job.logo_url %></div>
<div class='col-md-6'><h5><%= link_to job.title, job %></h5>
<%= truncate job.description, length: 100, separator: ' ' %><br>
<%= job.company_name %> | | <%#= number_to_currency(job.salary) %> <%= job.pay_rate %> | <%= job.position_type %><br> <%= link_to "View full job description", job %></div>
<div class='col-md-2'><%= job.city %>, <%= job.state %> <br> <%= job.zip_code %> <%= job.country %></div>
<div class='col-md-2'><%= time_ago_in_words(job.created_at) %> ago</div>

</div><br><% end %><br>
<div class='row'>
<div class='col-md-3'></div>
<div class='col-md-6'>
<div class='paginate'>
    <%#= paginate @jobs, :outer_window => 3 %>
</div></div>
<div class='col-md-3'></div>	
</div></div>
<div class='col-md-3 ads'><br><br>
<% if current_employer %>
<%= link_to ' Post a Job', new_job_path, class: '  fa fa-code btn btn-info btn-lg btn-block active' %>
<% else %>
<%= link_to "Login To Post a Job", new_job_path, class: 'btn btn-info btn-lg btn-block active' %>
<% end %>
<br><br>
