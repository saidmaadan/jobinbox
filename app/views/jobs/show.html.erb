<div class="container">
<div class="row">
<article class="col-md-12 job_head">
	<div class="col-md-9">
		<h2><%= @job.title %></h2>
		<%= @job.company_name %> | <%= @job.city %>, <%= @job.state %> <%= @job.zip_code %> <%= @job.country %> | Posted <%= time_ago_in_words(@job.created_at) %> ago
	</div>
	<div class="col-md-3"><br>
		<%= link_to "Apply for this job", @job.url, :target => "_blank", class: "btn btn-danger" %>
	</div><br>
</article><br>
<article class="col-md-12 job_main">
	<div class="col-md-8">
	<h3>Job Description</h3>
	<h5>Job Type: <%= @job.position_type %> </h5>
	<% if @job.pay_rate %>
	<h5>Salary: <%#= number_to_currency(@job.pay_rate) %> <%= @job.pay_rate %></h5>
	<% else %>
	<h5>Salary: Not Specified</h5>
	<% end %>

	<%= @job.description %>

<h3>Responsibilities</h3>
	<%= @job.responsibility %>

	<h3>Job Requirements/Skills</h3>
	<%= @job.skills %>

	<h2>JOB SNAPSHOT</h2>
	<h4>Employment Type: <%= @job.position_type %></h4>
	<h4>Base Pay: <%= @job.pay_rate %> <!-- per --> <%#= @job.salary_rate %></h4>
	
	<h4>Industry: <%= @job.industry %></h4>
	<h4>Experience: <%= @job.experience %></h4>
	
	<h4>Require travel: <%= @job.travel_required %></h4>

	<%= link_to "<< Apply Now >>", @job.url, :target => "_blank", class: "btn btn-info" %>
  <% if current_employer_admin? %>

  <%= link_to "Edit", edit_job_path(@job), class: 'btn btn-info' %>
  
  <%= link_to "Delete", job_path(@job), method: :delete, data: {confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
<% end %>
	<br>
	</div>
	<div class="col-md-4"><br>
	<div class="row">
	<div class="col-md-5">
	<%= image_tag @job.logo_url %></div>
	<div class="col-md-7">
		<h2><%= @job.company_name %></h2></div></div><br>

		<%= @job.company_description %><br>

		<%= link_to "Go to Company website", @job.website_url, :target => "_blank" %><br>

	</div>
</article><br>
</div>
</div>
