
<div class='container'>
  <div class='row'><br><br>
  <div class='col-sm-3'>
    <% if @employer.avatar_url %>
      <%= image_tag @employer.avatar_url, class: 'img-responsive' %>
    <% else %>
      <%= profile_image_for@employer, class: "img-responsive" %>
    <% end %> 
  </div>
  <div class='col-sm-6'>
    <h2 class='text-center'>Account Setting</h2>
    <%= render 'form' %>
  </div>
  <div class='col-sm-3'>
    <h3>Latest Jobs</h3><hr>
    <% Job.all.order('created_at DESC').limit(5).each do |job| %>
       <% if job %>
          <div class='row'>
            <div class='col-sm-12 employers-main'>
              <h2><%= link_to job.title, job %></h2>
            </div>
          </div>
          <% end %>
      <% end %>
        
  </div>

  </div>
</div>