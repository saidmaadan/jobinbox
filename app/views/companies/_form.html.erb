<!-- <div class='container'> -->
  <%= form_for (@company) do |f| %>
    <%= render "shared/errors", object: @company %>
        <div class='form-group'>
          <div class='row'>
            <div class='col-sm-6'>
              <%= f.label :logo, "Company Logo", class: 'control-label' %><br>
              <%= f.file_field :logo %>
            </div>
            <div class='col-sm-6'>
              <%= f.label :avatar, "Company Image", class: 'control-label' %><br>
              <%= f.file_field :avatar %>
            </div>
          </div>
        </div>

        <div class='form-group'>
          <div class='row'>
            <div class='col-sm-6'>
              <%= f.label :industry, class: 'control-label' %><br>
              <%= f.select :industry, Company::INDUSTRY, prompt: "Select one", class: "form-control" %>
            </div>
            <div class='col-sm-6'>
              <%= f.label :size, class: 'control-label' %><br>
              <%= f.select :size, Company::SIZE, prompt: "Select one", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class='form-group'>
          <div class='row'>
           <div class='col-sm-6'>
              <%= f.label :name, "Company Name" %>
              <%= f.text_field :name, size: 50, autofocus: true, placeholder: "Company Name", class: "form-control" %>
            </div>
            <div class='col-sm-6'>
              <%= f.label :website, "Company Website", class: 'control-label' %>
              <%= f.text_field :website, placeholder: "http://companyname.com", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class='form-group'>
          <div class='row'>
           <div class='col-sm-6'>
              <%= f.label :founded %>
              <%= f.text_field :founded, class: "form-control" %>
            </div>
            <div class='col-sm-6'>
              <%= f.label :location, class: 'control-label' %>
              <%= f.text_field :location, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
            <%= f.label :subsidiaries, class: 'control-label' %>
            <%= f.text_field :subsidiaries, class: "form-control" %>
        </div>

        <div class='form-group'>
        <div class='row'>
          <%= f.label :about, class: 'control-label' %>
          <%= f.text_area :about, cols: 30, rows: 7,placeholder: "Brief description about your company, what you are up to, service and product", class: "form-control" %>
          </div>
        </div>

        <div class='form-group'>
          <div class='row'>
           <div class='col-sm-6'>
              <%= f.label :facebook %>
              <%= f.text_field :facebook, class: "form-control" %>
            </div>
            <div class='col-sm-6'>
              <%= f.label :twitter, class: 'control-label' %>
              <%= f.text_field :twitter, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class='form-group'>
          <div class='row'>
           <div class='col-sm-6'>
              <%= f.label :youtube %>
              <%= f.text_field :youtube, class: "form-control" %>
            </div>
            <div class='col-sm-6'>
              <%= f.label :linkedin, class: 'control-label' %>
              <%= f.text_field :linkedin, class: "form-control" %>
            </div>
          </div>
        </div>
     
        <div class="form-group">
          <% if @company.new_record? %>
            <%= f.submit "Add Company", class: "btn btn-success" %>
          <% else %>
            <%= f.submit "Update Company", class: "btn btn-success" %>
          <% end %>
        </div>
  <% end %>
<!-- </div> -->