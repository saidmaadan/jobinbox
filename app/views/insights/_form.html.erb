<%= form_for @insight, :html => { :multipart => true } do |f| %>
  <%= render "shared/errors", object: @insight %>
  
    <div class='form-group'>
      <%= f.label :title, class: 'control-label' %>
      <%= f.text_field :title, autofocus: true, placeholder: "Company Name", class: "form-control" %>
    </div>
    
    <div class='form-group'>
      <%= f.label :content, class: 'control-label' %>
      <%= f.text_area :content, class: "form-control" %>
    </div>

    <div class='form-group'>
      <%= f.label :source_url, class: 'control-label' %>
      <%= f.text_field :source_url, placeholder: "Source Url", class: "form-control" %>
    </div>

    
    <div class='form-group'>
      <%= f.submit class: 'btn btn-success' %> <%= link_to "Cancel", insights_path, class: 'btn btn-default' %>
  </div>
<% end %>
 
