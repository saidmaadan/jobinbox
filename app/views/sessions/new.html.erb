<div class='container'>
  <div class='row'>
  <br><br>
    <div class='col-sm-6 col-sm-offset-3'>
      <div class='login-form text-center'>
      <div class='well'>
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active"><a href="#candidate" aria-controls="candidate" role="tab" data-toggle="tab">Candidate Login</a></li>
          <li role="presentation"><a href="#employer" aria-controls="employer" role="tab" data-toggle="tab">Employer Login</a>
          </li>
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="candidate">
            <header id="content-header">
          <h2>Signin As Candidate</h2>
        </header>

        <%= render "form" %>
          </div>
          <div role="tabpanel" class="tab-pane" id="employer">
            <header id="content-header">
              <h2>Signin As Employer</h3>
            </header>

            <%= render "form" %>
          </div>
        </div>
        
        <p>
          No account yet? Sign up as <%= link_to ' Candidate!', signup_path %> or  <%= link_to 'Employer!', register_path %>
        </p>
      </div>
    </div>
    </div>
    
  </div>
</div>